<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InfoOrderActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_info_donhang"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mau_xanh"
            app:title="Thông tin đơn hàng"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/white" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Địa chỉ nhận hàng "
        android:textColor="@color/mau_den2"
        android:textStyle="bold"
        android:textSize="14dp"
        android:fontFamily="@font/lexenddeca"
        android:id="@+id/tv"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên người nhận : "
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv2"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A"
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv_ten_nguoi_nhan"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại : "
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv3"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0999999999"
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv_sdt_donhang"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv4"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Việt Nam"
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv_diachi_donhang"
            android:paddingLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca"
            android:paddingLeft="20dp"
            android:text="Số sản phẩm : "
            android:textColor="@color/skip"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_soluong_donhang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexenddeca"
            android:paddingLeft="10dp"
            android:text="1"
            android:textColor="@color/skip"
            android:textSize="12dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian đặt hàng: "
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv8"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2021"
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv_time_donhang"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền: "
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv6"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9999999"
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv_thanhtien_donhang"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: "
            android:textColor="@color/skip"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv7"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chờ xác nhận"
            android:textColor="@color/mau_xanh"
            android:textStyle="bold"
            android:textSize="12dp"
            android:fontFamily="@font/lexenddeca"
            android:id="@+id/tv_trangthai_donhang"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sản phẩm"
        android:id="@+id/tv10"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rc_view_info_donhang"
        android:layout_marginTop="30dp"/>
</LinearLayout>