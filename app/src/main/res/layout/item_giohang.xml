<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/click_giohang"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:src="@drawable/iphone13"
                android:id="@+id/img_sp_giohang"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_ten_sp_giohang"
                            android:text="Iphone 13 128GB"
                            android:fontFamily="@font/lexenddeca"
                            android:textColor="@color/mau_den"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/delete"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/img_delete"/>
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_gia_sp_giohang"
                        android:text="9999999"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="#F44336"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv1"
                        android:text="đ"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="#F44336"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv2"
                        android:text="Số lượng :"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/skip"
                        android:textSize="14dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_soluong_giohang"
                        android:text="1"
                        android:fontFamily="@font/lexenddeca"
                        android:textColor="@color/skip"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>