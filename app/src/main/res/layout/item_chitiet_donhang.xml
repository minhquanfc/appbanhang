<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/anh_sp_chitiet_donhang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/iphone13"
                android:layout_margin="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tensp_chitiet_donhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iphone 13"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:textColor="@color/mau_den2"
                    android:fontFamily="@font/lexenddeca"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tv_giasp_chitiet_donhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iphone 13"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:fontFamily="@font/lexenddeca"/>

                <TextView
                    android:id="@+id/tv_soluongsp_chitiet_donhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iphone 13"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/skip"
                    android:fontFamily="@font/lexenddeca"/>
                <TextView
                    android:id="@+id/tv_tongtiensp_chitiet_donhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Iphone 13"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/skip"
                    android:fontFamily="@font/lexenddeca"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>