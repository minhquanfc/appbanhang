<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/mau_xanh"
        android:id="@+id/layout1">
            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/avt"
                android:id="@+id/img_avt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/tv_name_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_avt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexenddeca"
            android:text="Nhóm 5"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_mail_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/lexenddeca"
            android:text="admin@gmail.com"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/edit" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/layout1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopping2"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_donhangcuatoi"
                android:text="Đơn hàng của tôi"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yeuthich"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_yeuthich"
                android:text="Yêu thích"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/caidat"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_caidat"
                android:text="Cài đặt"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shopping3"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_giohang"
                android:text="Giỏ hàng"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/danhgia"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_danhgia"
                android:text="Đánh giá"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/chiase"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_gioithieu"
                android:text="Giới thiệu"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/question"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hotro"
                android:text="Hỗ trợ"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/dangxuat"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="25dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dangxuat"
                android:text="Đăng xuất"
                android:fontFamily="@font/lexenddeca"
                android:textColor="@color/mau_den2"
                android:textSize="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="17dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>