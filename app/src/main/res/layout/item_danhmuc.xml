<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/click_danhmuc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="15dp">
        <ImageView
            android:id="@+id/img_danhmuc"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/laptop"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tv_ten_danhmuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_danhmuc"
            android:fontFamily="@font/lexenddeca"
            android:text="Dien thoai"
            android:layout_centerHorizontal="true"
            android:textColor="@color/mau_den"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>
</RelativeLayout>