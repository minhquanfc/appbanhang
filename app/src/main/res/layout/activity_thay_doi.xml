<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_thaydoi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mau_xanh"
            app:titleTextColor="@color/white"
            app:title="Thay đổi"
            app:titleTextAppearance="@style/Toolbar.TitleText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:fontFamily="@font/lexenddeca"
            android:textColor="@color/mau_den"
            android:textSize="14dp"
            android:layout_below="@id/toolbar_thaydoi"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ed_hoTen_thaydoi"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_below="@id/tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:paddingLeft="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/lexenddeca"
            android:textColor="@color/mau_den"
            android:textSize="14dp"
            android:layout_below="@id/ed_hoTen_thaydoi"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv1"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/ed_mail_thaydoi"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_edittext"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ed_mail_thaydoi"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/lexenddeca"
            android:text="Số điện thoại"
            android:textColor="@color/mau_den"
            android:textSize="14dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/ed_sdt_thaydoi"
            android:background="@drawable/bg_edittext"
            android:layout_below="@id/tv2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:fontFamily="@font/lexenddeca"
            android:textColor="@color/mau_den"
            android:textSize="14dp"
            android:layout_below="@id/ed_sdt_thaydoi"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/tv3"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:id="@+id/ed_diachi_thaydoi"
            android:background="@drawable/bg_edittext"
            android:layout_below="@id/tv3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"/>

        <Button
            android:id="@+id/btn_thaydoi"
            android:layout_width="335dp"
            android:layout_height="52dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:backgroundTint="@color/mau_xanh"
            android:fontFamily="@font/lexenddeca"
            android:text="Thay đổi"
            android:textSize="14dp" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>