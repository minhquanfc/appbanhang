<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityGioiThieu.OnBoardingActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:id="@+id/tv_skip"
        android:textSize="18dp"
        android:padding="16dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/skip"
        android:fontFamily="@font/lexenddeca"
        android:layout_alignParentRight="true"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/viewpager"
        android:layout_below="@+id/tv_skip"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewpager"
        android:id="@+id/layout1">
        <me.relex.circleindicator.CircleIndicator
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:ci_drawable="@drawable/bg_cricle_red"
            android:id="@+id/circleindicator"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="146dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/mau_xanh"
            android:fontFamily="@font/lexenddeca"
            android:text="@string/next"
            android:textSize="14dp" />
    </RelativeLayout>
</RelativeLayout>